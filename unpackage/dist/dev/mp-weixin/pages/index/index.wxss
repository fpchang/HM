.popup-content {
  width: 500px;
  background-color: #fff;
  border-radius: 12px;
  max-height: calc(100vh - 130px);
  box-sizing: border-box;
  overflow-x: hidden;
  overflow-y: auto;
}
.popup-content .comContent {
  padding: 20px 30px;
}
.popup-content .create-order-title-style {
  height: 35px;
  line-height: 36px;
  padding-top: 20px;
  font-weight: bold;
  text-align: center;
}
.top-container {
  display: flex;
  flex-direction: column;
  font-size: 20px;
}
.add-icon-style {
  cursor: pointer;
}
.add-icon-style:hover {
  color: #ff0000;
}
.scroll-content .top-area {
  height: 110px;
  box-sizing: border-box;
  z-index: 999;
  background-color: #fff;
}
.scroll-content .top-area .title-area {
  position: relative;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
}
.scroll-content .top-area .title-area .check-area {
  max-width: 200px;
  height: 24px;
  display: flex;
  flex-direction: row;
  text-align: center;
}
.scroll-content .top-area .title-area .check-area .check-panal {
  width: 120px;
  max-width: 200px;
  padding: 10px 0;
  position: absolute;
  top: 50px;
  left: 20px;
  background-color: #ddd;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 20px;
  z-index: 999;
  font-size: 16px;
}
.scroll-content .top-area .navbar {
  width: 100%;
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.scroll-content .top-area .navbar .nav-content {
  padding: 0 15px;
  width: 100%;
  box-sizing: border-box;
}
.sticky-style {
  width: 100vw;
  position: fixed;
  top: 0px;
  left: 0;
}
.content-area {
  min-height: calc(100vh - 110px);
  height: 120vh;
  background-color: #eee;
}
