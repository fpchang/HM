{
	"bsonType": "object",
	"required": ["blong", "hotelName"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"blong": {
			"description": "所属账号",
			"bsonType": "string",
			"foreignKey": "hm-user.phone"
		},
		"hotelName": {
			"description": "酒店名称",
			"bsonType": "string"
		},
		"hotelAdress": {
			"description": "酒店地址",
			"bsonType": "string"
		},
		"hotelCoordinate": {
			"description": "酒店坐标",
			"bsonType": "array"
		},
		"hotelIntroduction": {
			"description": "酒店简介",
			"bsonType": "string"
		},
		"employee": {
			"description": "员工",
			"bsonType": "array",
			"required": [
				"role","phone"
			],
			"properties": {
				"role": {
					"description": "manager：管理员，normal：员工",
					"bsonType": "string",
					"enum": ["manager", "normal"]
				},
				"phone": {
					"description": "手机号",
					"title": "手机号",
					"bsonType": "string",
					"minLength": 11,
					"pattern": "^[1][3,4,5,6,7,8,9][0-9]{9}$",
					"errorMessage": {
						"required": "{title}不能为空",
						"minLength": "{title}不能小于 {minLength} 个字符",
						"pattern": "{title}格式不正确"
					}
				}
			}
		}
	}
}